<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.pathfinder.android.udacitypathfinder.ui.article.ArticleActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="#560303"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        />


  <ImageButton
    android:layout_width="wrap_content"
    android:layout_height="42dp"
    android:id="@+id/btn_exit"
    android:src="@mipmap/ic_exit"
    android:background="@null"
    android:scaleType="centerInside"
    android:layout_alignParentRight="true"
    android:layout_above="@+id/scrollView"
    android:layout_alignParentTop="true"
    android:clickable="true"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"/>

  <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="42dp"
      android:id="@+id/btn_like"
      android:src="@mipmap/ic_heart_0"
      android:background="@null"
      android:scaleType="centerInside"
      android:clickable="true"
      android:paddingTop="8dp"
      android:paddingBottom="8dp"
      android:layout_alignParentTop="true"
      android:layout_toLeftOf="@+id/btn_exit"
      android:layout_above="@+id/scrollView"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/toolbar"
        android:id="@+id/scrollView"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <WebView
                android:id="@+id/webview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />

          <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#aaaaaa"
            android:id="@+id/fl_nanodegree">

            <ImageView
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:id="@+id/iv_nanodegree"
              android:layout_gravity="right"
              android:alpha=".4"/>

            <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <TextView
                  android:id="@+id/tv_banner"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Nanodegree Banner"
                  android:textStyle="bold"
                  android:textColor="@android:color/white"
                  android:layout_gravity="center_horizontal"
                  style="@style/TextShadowSmall"
                  android:paddingTop="15dp"/>

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nanodegree Title"
                android:id="@+id/tv_title"
                style="@style/TextShadow"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5dp"
                />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Learn More"
                android:id="@+id/tv_learn_more"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:clickable="true"
                style="@style/TextShadowSmall"
                android:linksClickable="true"
                />
            </LinearLayout>
          </FrameLayout>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyle"
        />

</RelativeLayout>
