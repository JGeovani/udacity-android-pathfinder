<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.pathfinder.android.udacitypathfinder.ui.article.ArticleActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        />


  <ImageButton
    android:layout_width="wrap_content"
    android:layout_height="42dp"
    android:id="@+id/btn_exit"
    android:src="@drawable/x_icon_0"
    android:background="@null"
    android:scaleType="centerInside"
    android:layout_alignParentRight="true"
    android:layout_above="@+id/scrollView"
    android:layout_alignParentTop="true"
    android:clickable="true"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"/>

  <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="42dp"
      android:id="@+id/btn_like"
      android:src="@drawable/heart_icon_0"
      android:background="@null"
      android:scaleType="centerInside"
      android:clickable="true"
      android:paddingTop="8dp"
      android:paddingBottom="8dp"
      android:layout_alignParentTop="true"
      android:layout_toLeftOf="@+id/btn_exit"
      android:layout_above="@+id/scrollView"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/toolbar"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <WebView
                android:id="@+id/webview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/banner"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="@color/primary"
                android:text="Nanodegree Banner"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                />

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyle"
        />

</RelativeLayout>
